---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Page Not Found">
  <div class="container flex flex-col items-center justify-center min-h-[70vh] py-20 text-center">
    <h1 class="text-6xl md:text-8xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-accent animate-pulse-slow">
      404
    </h1>
    <p class="mt-4 text-xl md:text-2xl text-muted-foreground">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a 
      href="/" 
      class="mt-8 inline-flex items-center justify-center rounded-md px-6 py-3 text-sm font-medium bg-primary text-primary-foreground shadow hover:bg-primary/90 transition-colors"
    >
      Return Home
    </a>
  </div>
</MainLayout>

<style>
  .animate-pulse-slow {
    animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
</style> 
---
import '../styles/global.css';
import { LoginForm } from "@/components/auth/LoginForm";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Login | Helix Dashboard</title>
    <style>
      /* Modern animated background */
      @keyframes gradient-shift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }
      
      .modern-gradient {
        background: linear-gradient(-45deg, #0f172a, #111827, #1e1b4b, #312e81);
        background-size: 400% 400%;
        animation: gradient-shift 15s ease infinite;
      }
      
      /* Ambient glow effect */
      @keyframes pulse-glow {
        0% { opacity: 0.4; transform: scale(0.97); }
        50% { opacity: 0.7; transform: scale(1); }
        100% { opacity: 0.4; transform: scale(0.97); }
      }
      
      .ambient-glow {
        animation: pulse-glow 8s ease-in-out infinite;
      }
      
      /* Hover effect for card */
      .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      
      .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
      }
    </style>
  </head>
  <body class="bg-white">
    <div class="min-h-screen flex flex-col md:flex-row">
      <!-- Left side with image and testimonial -->
      <div class="relative hidden md:flex flex-col flex-1 text-white">
        <div class="p-6 z-10">
          <h2 class="text-3xl font-bold text-blue-300">Helix</h2>
        </div>
        
        <div class="flex-1 flex flex-col justify-between p-6 z-10">
          <div></div> <!-- Spacer -->
          
          <!-- Testimonial at the bottom -->
          <div class="max-w-md bg-black/40 p-4 rounded-lg backdrop-blur-sm">
            <blockquote class="text-lg font-medium text-blue-200">
              "This library has saved me countless hours of work and helped me deliver stunning designs to my clients faster than ever before. Highly recommended!"
            </blockquote>
            <p class="mt-4 text-blue-300 font-semibold">Sofia Davis</p>
          </div>
        </div>
        
        <!-- Background image with overlay -->
        <div class="absolute inset-0 z-0">
          <div 
            class="w-full h-full bg-cover bg-center"
            style="background-image: url('/images/blue-model.webp?v=1'); filter: brightness(0.9);"
          ></div>
        </div>
      </div>
      
      <!-- Right side with login form - MODERNIZED -->
      <div class="flex-1 flex flex-col modern-gradient relative overflow-hidden">
        <!-- Decorative elements -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-purple-600/10 rounded-full blur-3xl ambient-glow"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-600/10 rounded-full blur-3xl ambient-glow" style="animation-delay: -4s;"></div>
        <div class="absolute top-1/2 left-1/4 w-64 h-64 bg-indigo-600/10 rounded-full blur-3xl ambient-glow" style="animation-delay: -2s;"></div>
        
        <!-- Top navigation -->
        <div class="flex justify-between items-center p-6 relative z-10">
          <div class="md:hidden">
            <h2 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-violet-400">Helix</h2>
          </div>
          <a href="/dashboard" class="group relative inline-flex items-center gap-1 px-4 py-2 rounded-full bg-white/5 hover:bg-white/10 backdrop-blur-sm text-sm font-medium text-blue-100 transition-all duration-300">
            <span class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-500/20 to-violet-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform duration-300 group-hover:rotate-12"><rect width="7" height="7" x="3" y="3" rx="1"></rect><rect width="7" height="7" x="14" y="3" rx="1"></rect><rect width="7" height="7" x="14" y="14" rx="1"></rect><rect width="7" height="7" x="3" y="14" rx="1"></rect></svg>
            <span class="relative">Dashboard</span>
          </a>
        </div>
        
        <!-- Form container -->
        <div class="flex-1 flex items-center justify-center px-6 py-10 sm:px-10 relative z-10">
          <div class="w-full max-w-md">
            <!-- Card container with modern glassmorphism -->
            <div class="card-hover relative bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl shadow-2xl p-8 sm:p-10 overflow-hidden">
              <!-- Animated accent borders -->
              <div class="absolute top-0 inset-x-0 h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-purple-600"></div>
              <div class="absolute -left-32 -right-32 top-0 h-96 bg-gradient-to-br from-blue-600/30 via-indigo-700/20 to-transparent opacity-20 blur-2xl"></div>
              
              <!-- Modern header -->
              <div class="absolute top-0 right-0 p-3">
                <div class="flex space-x-1">
                  <div class="w-3 h-3 rounded-full bg-blue-400"></div>
                  <div class="w-3 h-3 rounded-full bg-indigo-400"></div>
                  <div class="w-3 h-3 rounded-full bg-purple-400"></div>
                </div>
              </div>
              
              <LoginForm client:load className="relative z-10" />
            </div>
          </div>
        </div>
        
        <!-- Modern footer -->
        <div class="p-6 text-center relative z-10">
          <p class="text-xs text-blue-200/70">
            Â© 2023 Helix
            <span class="inline-flex items-center px-3">
              <span class="h-px w-3 bg-blue-400/30"></span>
              <a href="#" class="mx-2 hover:text-blue-200 transition-colors duration-200 relative group">
                Privacy
                <span class="absolute -bottom-1 left-0 w-0 h-px bg-blue-400 group-hover:w-full transition-all duration-300"></span>
              </a>
              <span class="h-px w-3 bg-blue-400/30"></span>
            </span>
            <span class="inline-flex items-center px-3">
              <span class="h-px w-3 bg-blue-400/30"></span>
              <a href="#" class="mx-2 hover:text-blue-200 transition-colors duration-200 relative group">
                Terms
                <span class="absolute -bottom-1 left-0 w-0 h-px bg-blue-400 group-hover:w-full transition-all duration-300"></span>
              </a>
              <span class="h-px w-3 bg-blue-400/30"></span>
            </span>
          </p>
        </div>
      </div>
    </div>
    
    <script>
      // Add some interactive effects
      document.addEventListener('DOMContentLoaded', () => {
        const loginCard = document.querySelector('.card-hover');
        if (loginCard) {
          // Subtle rotation effect on mouse move
          document.addEventListener('mousemove', (e) => {
            if (!window.matchMedia('(min-width: 768px)').matches) return;
            
            const card = loginCard.getBoundingClientRect();
            const centerX = card.left + card.width / 2;
            const centerY = card.top + card.height / 2;
            const moveX = ((e.clientX - centerX) / (card.width / 2)) * 2;
            const moveY = ((e.clientY - centerY) / (card.height / 2)) * 2;
            
            (loginCard as HTMLElement).style.transform = `perspective(1000px) rotateX(${-moveY}deg) rotateY(${moveX}deg) translateZ(10px)`;
          });
          
          // Reset on mouse leave
          document.addEventListener('mouseleave', () => {
            (loginCard as HTMLElement).style.transform = 'perspective(1000px) rotateX(0) rotateY(0) translateZ(0)';
          });
        }
      });
    </script>
  </body>
</html> 